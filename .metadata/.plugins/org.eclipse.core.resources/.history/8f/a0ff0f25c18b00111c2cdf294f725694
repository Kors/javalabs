package files;

import files.*;
import java.util.concurrent.locks.ReadWriteLock;
import java.util.Random;


public class neighbour implements Runnable {

	Random rand = new Random();
	private ReadWriteLock _flag;
	private int _neighbourNumber = 0 ;
	private field_of_berries _field;

	private int _temp = 0 ;


	public neighbour(int neighbourNumber , field_of_berries field) {
		this._neighbourNumber = neighbourNumber;
		this._field = field ;
	}

	@Override
	public void run() {
		System.out.println("\nNeighbour "+ _neighbourNumber );
		while (true){
			System.out.print("\nсосед " +_neighbourNumber + " хочет €год");
			_field.get_berries(_neighbourNumber);
			System.out.print("\nсосед " + _neighbourNumber + " собрал €годы и вернулс€ к себе");
			try {
				Thread.sleep(1000 + rand.nextInt(2000));
			} catch (InterruptedException ex) {
			}
			
		}
	}
}
